int main()
{
    int a = 1, b = 0, c = 2;
    int result = 0;
    
    // 测试逻辑与短路计算
    // a && b 应该短路，b不会被计算
    if (a && b) {
        result = 1;
    }
    
    // 测试逻辑或短路计算
    // a || c 应该短路，c不会被计算
    if (a || c) {
        result = 2;
    }
    
    // 测试复杂表达式
    // (a && b) || (c && a) 应该短路到第二个条件
    if ((a && b) || (c && a)) {
        result = 3;
    }
    
    // 测试嵌套短路
    // a && (b || c) 应该短路，b和c都不会被计算
    if (a && (b || c)) {
        result = 4;
    }
    
    return result;
} 